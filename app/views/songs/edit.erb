<h3>Edit song</h3>
<form action="/songs/<%= @song.slug %>" method="post">
  <input id="hidden" type="hidden" name="_method" value="patch">
  <label for="text">Name </label>
  <input type="text" name="song[name]" id="Name" value="<%= @song.name %>"> <br>
  Genre: 
  <ul>
  <%  @genres.each do |genre|%>
    <input type="checkbox" name="genre[]" id="<%= genre.name %>"value="<%= genre.id %>"
    <% if @song.genres.include? (genre)%>
        <%= "CHECKED" %>
    <% end %>
    ><%= genre.name %>
  <% end %>
  </ul>
  <label for="text">Artist Name</label>
  <input type="text" name="artist[name]" id="Artist Name" value="<%= @song.artist.name %>"><br>

  <button type="submit">Save</button>





</form>